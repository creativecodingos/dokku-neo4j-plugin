#!/usr/bin/env bash
#
export NEO4J_IMAGE_COMMUNITY=${NEO4J_IMAGE_COMMUNITY:="creativecoding/neo4j-community"}
export NEO4J_IMAGE_ENTERPRISE=${NEO4J_IMAGE_ENTERPRISE:="creativecoding/neo4j-enterprise"}
export NEO4J_IMAGE_VERSION=${NEO4J_IMAGE_VERSION:="2.2.5"}
export NEO4J_ROOT=/var/lib/dokku/services/neo4j

export NEO4J_PLUGIN_COMMAND_PREFIX="neo4j"
export NEO4J_PLUGIN_DATA_ROOT="$NEO4J_ROOT"
export NEO4J_PLUGIN_DATASTORE_PORTS=(7474 1337)
export NEO4J_PLUGIN_DEFAULT_ALIAS="NEO4J"
export NEO4J_PLUGIN_IMAGE_COMMUNITY=$NEO4J_IMAGE_COMMUNITY
export NEO4J_NEO4J_PLUGIN_IMAGE_VERSION=$NEO4J_IMAGE_ENTERPRISE
export PLUGIN_IMAGE_VERSION=$NEO4J_IMAGE_VERSION
export NEO4J_PLUGIN_SCHEME="http"
export NEO4J_PLUGIN_SERVICE="Neo4j"
